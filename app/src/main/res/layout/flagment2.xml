<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="center"
        android:background="@drawable/fragment2back"
        android:layout_weight="6">
        <com.github.lzyzsd.circleprogress.CircleProgress
            android:id="@+id/circle_progress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:circle_progress="60"
            custom:circle_max="100"
            custom:circle_text_color="#000000"
            custom:circle_finished_color="#ff5a97"
            custom:circle_unfinished_color="#ffffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/fragment2back2"
        android:layout_weight="2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/graph"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/fragment2back2"
        android:layout_weight="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ff5a97"
            android:text="어제의 나보다 0시간 2분 더 공부함"
            android:textSize="17sp"/>
    </LinearLayout>
</LinearLayout>