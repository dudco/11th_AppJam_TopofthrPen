<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/recycler_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="400dp"
    android:layout_height="150dp"
    android:weightSum="2"
    android:background="@drawable/red_box">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="40dp"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수학"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신사고 심훈"
            android:textColor="@android:color/white"
            android:textSize="8sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 공부 시간"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/time_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": 1시간"
            android:textColor="@android:color/white"
            android:textSize="10sp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표시간"
            android:textColor="#ff5a79"/>
        <ImageView
            android:id="@+id/goal_image"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:background="@drawable/progress_complate" />

        <TextView
            android:id="@+id/progress_text_complating"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성취시간"
            android:textColor="#ff5a79"/>
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:max="100"
            android:progress="10"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progress_custom"/>
    </LinearLayout>
</LinearLayout>